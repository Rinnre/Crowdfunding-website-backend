<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wj.crowd.management.mapper.MenuMapper">

    <!--    List<Menu> getAllMenu();-->
    <resultMap id="permissionResultMap" type="com.wj.crowd.management.entity.Do.Menu">
        <id column="id" property="id"/>
        <result column="pid" property="pid"/>
        <result column="name" property="name"/>
        <result column="path" property="path"/>
        <result column="type" property="type"/>
        <result column="component" property="component"/>
        <result column="icon" property="icon"/>
        <collection property="permissions" column="id"
                    select="com.wj.crowd.management.mapper.PermissionMapper.getMenuPermissionsById"/>
    </resultMap>
    <select id="getAllMenu" resultMap="permissionResultMap">
        SELECT id,pid,name,path,component,icon,type
        FROM menu
        WHERE is_delete=0
    </select>


    <!--    List<Permission> getAssignedPermissions(String menuId);-->
    <select id="getAssignedPermissions" resultType="com.wj.crowd.management.entity.Do.Permission">
        SELECT id,name "value"
        FROM permission JOIN menu_permissions
        ON permission.id = menu_permissions.permission_id
        WHERE menu_permissions.menu_id = #{menuId}
        AND permission.is_delete = 0
    </select>

    <!--    void assignPermission(String menuId, List<String> permissionIdList);-->
    <insert id="assignPermission">
        INSERT INTO menu_permissions
        VALUE
        <foreach collection="permissionIdList" item="permissionId" separator=",">
            (#{menuId},#{permissionId})
        </foreach>
    </insert>

    <!--    void unAssignPermission(String menuId, List<String> permissionIdList);-->
    <delete id="unAssignPermission">
        DELETE FROM menu_permissions
        WHERE menu_id = #{menuId}
        AND permission_id IN (
            <foreach collection="permissionIdList" item="permissionId" separator=",">
                #{permissionId}
            </foreach>
        )
    </delete>

</mapper>
